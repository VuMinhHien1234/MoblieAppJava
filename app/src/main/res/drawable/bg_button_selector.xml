<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Khi được chọn -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF6421" /> <!-- Màu cam -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Khi nhấn -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF8333" /> <!-- Màu cam sáng hơn khi nhấn -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Mặc định -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#A9A9A9" /> <!-- Màu xám mặc định -->
            <corners android:radius="12dp" />
        </shape>
    </item>

</selector>
